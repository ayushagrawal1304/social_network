<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="sign_up">
		<h1 align="center"> <%= @community.name %> </h1>
	</div>
</nav>

<div class="container">
  <div class="sign_up">
		<%= form_with model: @approval, url: users_communities_invitations_path do |f| %>

			<div class="form-group">
			   <br> <%= select_tag(:user_id, options_for_select(invite_user_options), { class: 'form-control'}) %></br>
			</div>
			<%= f.hidden_field :community_id, value: @community.id %>

			<div class="actions">
			  	<br><%= f.submit "Invite", class: "btn btn-primary"%></br>
			</div>

		<% end %>

  </div>
</div>
